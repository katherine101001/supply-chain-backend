# Get full product details with optional verification
# GET /product/{sku}?full=true

GET {{host}}/product/sku20?full=true
Accept: application/json
###
GET {{host}}/product/sku40?full=true
Accept: application/json
###
# Full product details with blockchain verification details
GET {{host}}/product/sku0?full=true&verify=true
