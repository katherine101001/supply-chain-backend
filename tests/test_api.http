# Get blockchain trace logs with verification
# GET /product/{sku}/trace?verify=true
# Auditing, compliance, trace visualization.
# Timeline UI
GET {{host}}/product/sku10/trace?verify=true
Accept: application/json

###

# Get latest status with verification
# GET /product/{sku}/latest?verify=true
# Product Current State (Status Badge)
# Used by: status chip, summary card
GET {{host}}/product/sku10/latest?verify=true
Accept: application/json